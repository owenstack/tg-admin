{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "wrangler deploy --dry-run",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "wrangler dev --port=3000",
		"start": "wrangler dev",
		"deploy": "wrangler deploy",
		"typegen": "wrangler types --env-interface CloudflareBindings",
		"db:deploy": "wrangler d1 migrations apply tg-admin-db --remote"
	},
	"dependencies": {
		"@grammyjs/menu": "^1.3.1",
		"@orpc/openapi": "catalog:",
		"@orpc/server": "catalog:",
		"@orpc/client": "catalog:",
		"@orpc/zod": "catalog:",
		"@tg-admin/api": "workspace:*",
		"@tg-admin/auth": "workspace:*",
		"@tg-admin/db": "workspace:*",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"grammy": "^1.38.3",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"typescript": "catalog:",
		"tsdown": "catalog:",
		"@tg-admin/config": "workspace:*",
		"wrangler": "catalog:",
		"@types/node": "catalog:"
	}
}
